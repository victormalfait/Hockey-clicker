{{outlet}}
<div class="row">
  <div class="col-md-5">
    <h3>Classement</h3>
    <table class="table table-striped">
      <tr>
        <th>Login</th>
        <th>Email</th>
        <th>Score</th>
      </tr>
      {{#each model}}
        <tr>
          <td>{{login}}</td>
          <td>{{email}}</td>
          <td>{{points}}</td>
        </tr>
      {{/each}}
    </table>
  </div>
  <div class="col-md-7">
    <h3>Jouer Ã  Hockey Clicker</h3>
    <form role="form">
      <div class="form-group">
        <label for="login">Login</label>
        {{input type="text" class="form-control" id="login" value=login}}
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        {{input type="text" class="form-control" id="email" value=email}}
      </div>
      <button {{action 'creerUtilisateur'}} class="btn btn-primary btn-lg btn-block">Ajouter</button>
    </form>
  </div>
</div>
